<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#E1000000"/> <!-- Semi-transparent orange color -->
    <stroke
        android:width="2dp"
        android:color="#FB8C00" />

    <!-- Padding (optional, for spacing inside the border) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
    <corners android:radius="10dp"/>  <!-- Circle with radius half of the width/height -->
</shape>
