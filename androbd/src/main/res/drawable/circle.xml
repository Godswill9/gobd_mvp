<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#80520681"/> <!-- Semi-transparent orange color -->
    <stroke
        android:width="1dp"
        android:color="@android:color/white" />

    <!-- Padding (optional, for spacing inside the border) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
    <corners android:radius="50dp"/>  <!-- Circle with radius half of the width/height -->
</shape>
